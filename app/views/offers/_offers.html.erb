<div class="container">
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
    <% @offers.each do |offer| %>
      <%= link_to offer_path(offer), class: "mx-4 sm:mx-0 flex flex-col justify-between block hover:bg-gray-50 focus:outline-none focus:bg-gray-50 transition duration-150 ease-in-out shadow bg-white rounded-lg overflow-hidden" do %>
        <div class="text-sm leading-5 font-medium text-primary-600 truncate pt-4 px-4 sm:px-6">
          <%= offer.name %>
        </div>
        <div class="mt-2 sm:flex sm:justify-between pt-2 pb-1 px-4 sm:px-6">
          <div class="text-sm leading-5 text-gray-500">
            <%= truncate(offer.description, length: 250, omission: t('see_more')) %>
          </div>
        </div>
        <div class="mt-2 sm:flex sm:justify-between px-4 pt-2 pb-2 sm:px-6 bg-secondary-100 text-primary-600">
          <div class="sm:flex">
            <div class="mt-2 flex items-center text-xs leading-5 sm:mt-0">
              <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
              </svg>
              <%= offer.location.present? ? offer.location : 'Global' %>
            </div>
          </div>
          <div class="mt-2 flex items-center text-xs leading-5 sm:mt-0">
            <span>
              <%= t('created') %>
              <time><%= distance_of_time_in_words_to_now offer.created_at %> ago</time>
            </span>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
