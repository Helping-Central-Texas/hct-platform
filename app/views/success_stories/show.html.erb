<div class="container p-8 sm:p-0">
  <% if user_signed_in? and current_user.is_admin? %>
    <div class="w-full flex justify-end mb-6">
      <%= link_to edit_success_story_path do %>
        <span class="inline-flex rounded-md shadow-sm mt-4">
          <button type="button" class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm leading-5 font-medium rounded-md text-gray-700 bg-white hover:text-gray-500 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:text-gray-800 active:bg-gray-50 transition ease-in-out duration-150">
            <svg class="-ml-1 mr-2 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
            </svg>
            <span>
              Edit
            </span>
          </button>
        </span>
      <% end %>
      <%= link_to success_story_path, method: :delete, data: { confirm: "Are you sure you want to delete this success story?" } do %>
        <span class="inline-flex rounded-md shadow-sm mt-4 ml-4">
          <button type="button" class="relative inline-flex items-center px-4 py-2 border border-red-300 text-sm leading-5 font-medium rounded-md text-red-700 bg-white hover:text-red-500 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:text-red-800 active:bg-red-50 transition ease-in-out duration-150">
            <span>
              Delete
            </span>
          </button>
        </span>
      <% end %>
    </div>
  <% end %>

  <div class="overflow-hidden rounded-lg shadow-users m-auto max-w-screen-lg">
    <div class="p-12  sm:px-16 md:px-24">
      <div class="mb-2 text-primary-600 text-3xl font-bold">
        <%= @success_story.title %>
      </div>
      <% if @success_story.links.present? %>
        <div class="text-gray-800 text-sm mb-8">
          <%= inline_svg_pack_tag 'media/svgs/link.svg', class: 'fill-current inline-block' %> <%= t('link_to_demos') %> <%= Rinku.auto_link(@success_story.links, :all, 'target="_blank" class="text-primary-600"').html_safe %>
        </div>
      <% end %>
      <div>
        <%= simple_format @success_story.body, class: 'mt-2 mb-2 leading-loose text-gray-600' %>
      </div>
    </div>
    <% if @success_story.projects.present? %>
      <div class="bg-primary-100 text-primary-600 p-8 sm:px-16 md:px-24 font-medium">
        <%= t('volunteer') %> â†’ <%= @success_story.projects.map { |project| link_to project.name, project, class: 'underline' }.join(' ').html_safe %>.
      </div>
    <% end %>
  </div>
</div>
